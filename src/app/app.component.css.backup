/* ===== ESTILOS DASHBOARD MASONRY ===== */

/* Grid Masonry Principal - RESPONSIVO A SIDEBAR */
.dashboard-masonry {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 1.5rem;
  padding: 0;
  margin: 0;
  width: 100%;
  /* Recalcula automáticamente cuando cambia el ancho del contenedor */
  /* Permite que los items pequeños rellenen huecos dejados por items que ocupan varias columnas */
  grid-auto-flow: dense;
}

.masonry-item {
  display: flex;
  flex-direction: column;
}

/* Items que ocupan 2 columnas */
.masonry-item-large {
  grid-column: span 2 !important;
}

/* Items que ocupan 1 columna */
.masonry-item-small {
  grid-column: span 1 !important;
}

/* ===== ESTILOS DE CARDS ===== */

.card {
  background: white;
  border-radius: 0.75rem;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  overflow: hidden;

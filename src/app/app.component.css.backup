/* Scrollbar Hidden */
.navigation-section {
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* Internet Explorer 10+ */
}

.navigation-section::-webkit-scrollbar {
  display: none; /* WebKit */
}

/* Content area - responsivo a sidebar */
.content-area {
  width: 100%;
  transition: all 0.3s ease;
  height: calc(100vh - 70px);
  overflow-y: auto;
  position: relative;
  z-index: 1;
  background: transparent;
}

/* Scrollbar personalizada para el área de contenido */
.content-area::-webkit-scrollbar {
  width: 8px;
}

.content-area::-webkit-scrollbar-track {
  background: rgba(226, 232, 240, 0.3);
  border-radius: 10px;
}

.content-area::-webkit-scrollbar-thumb {
  background: linear-gradient(145deg, rgba(102, 126, 234, 0.3), rgba(118, 75, 162, 0.3));
  border-radius: 10px;
  border: 2px solid transparent;
  background-clip: content-box;
}

.content-area::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(145deg, rgba(102, 126, 234, 0.5), rgba(118, 75, 162, 0.5));
  background-clip: content-box;
}

/* Scrollbar personalizada para el área de contenido */
.content-area::-webkit-scrollbar {
  width: 8px;
}

.content-area::-webkit-scrollbar-track {
  background: rgba(226, 232, 240, 0.3);
  border-radius: 10px;
}

.content-area::-webkit-scrollbar-thumb {
  background: linear-gradient(145deg, rgba(102, 126, 234, 0.3), rgba(118, 75, 162, 0.3));
  border-radius: 10px;
  border: 2px solid transparent;
  background-clip: content-box;
}

.content-area::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(145deg, rgba(102, 126, 234, 0.5), rgba(118, 75, 162, 0.5));
  background-clip: content-box;
}

/* Bounce effect on expand */
@keyframes sidebarExpand {
  0% {
    width: 0;
    opacity: 0;
    transform: translateX(-100%) scaleX(0.8);
  }
  70% {
    width: 330px;
    opacity: 0.9;
    transform: translateX(0) scaleX(1.02);
  }
  100% {
    width: 320px;
    opacity: 1;
    transform: translateX(0) scaleX(1);
  }
}

@keyframes sidebarCollapse {
  0% {
    width: 320px;
    opacity: 1;
    transform: translateX(0) scaleX(1);
  }
  30% {
    width: 310px;
    opacity: 0.8;
    transform: translateX(-10px) scaleX(0.98);
  }
  100% {
    width: 0;
    opacity: 0;
    transform: translateX(-100%) scaleX(0.8);
  }
}

/* Apply animations */
.sidebar-expanded.sidebar-animated {
  animation: sidebarExpand 0.5s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
}

.sidebar-collapsed.sidebar-animated {
  animation: sidebarCollapse 0.4s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
}

/* Modal de Tabla Expandida */
.table-modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(15, 25, 45, 0.9), rgba(45, 55, 75, 0.95));
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  backdrop-filter: blur(12px);
  animation: fadeIn 0.3s ease-out;
}

.table-modal-container {
  background: linear-gradient(145deg, #ffffff, #f8fafc);
  border-radius: 24px;
  box-shadow: 
    0 35px 60px rgba(0, 0, 0, 0.3),
    0 0 0 1px rgba(255, 255, 255, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
  width: 95vw;
  height: 90vh;
  max-width: 1400px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  animation: tableModalSlide 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes tableModalSlide {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(-30px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* Header del Modal */
.table-modal-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 24px 32px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  min-height: 80px;
}

.modal-title-section {
  display: flex;
  align-items: center;
  gap: 16px;
}

.modal-icon {
  font-size: 32px !important;
  width: 32px !important;
  height: 32px !important;
  color: rgba(255, 255, 255, 0.9);
}

.title-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.modal-title {
  font-size: 1.5rem;
  font-weight: 700;
  margin: 0;
  color: white;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.modal-subtitle {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

.modal-header-actions {
  display: flex;
  gap: 8px;
}

.modal-action-btn {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: white;
  width: 44px;
  height: 44px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.modal-action-btn:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(1.05);
}

.close-btn:hover {
  background: rgba(239, 68, 68, 0.2);
  border-color: rgba(239, 68, 68, 0.3);
}

/* Contenido del Modal */
.table-modal-content {
  flex: 1;
  overflow: hidden;
  padding: 0;
}

.table-wrapper {
  height: 100%;
  overflow: auto;
  background: linear-gradient(145deg, #f8fafc, #ffffff);
}

.expanded-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  font-size: 0.9rem;
}

/* Headers de la tabla */
.table-header-cell {
  background: linear-gradient(145deg, #667eea, #764ba2);
  color: white;
  padding: 16px 20px;
  text-align: left;
  font-weight: 600;
  font-size: 0.85rem;

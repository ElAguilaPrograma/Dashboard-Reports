  height: 18px;
}

/* Animaciones y efectos adicionales */
.table-container {
  position: relative;
}

.table-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #3b82f6, #8b5cf6, #06b6d4);
  opacity: 0;
  transition: opacity 0.3s;
}

.card-table:hover .table-container::before {
  opacity: 1;
}

/* Mejoras visuales para números grandes */
.table-cell.numeric {
  background: linear-gradient(135deg, transparent 0%, rgba(59, 130, 246, 0.02) 100%);
}

/* Indicador de datos faltantes */
.table-cell:empty::before {
  content: '—';
  color: #d1d5db;
  font-style: italic;
}

/* Efecto de selección de fila */
.table-row {
  cursor: pointer;
}

.table-row:active {
  background: #e0e7ff !important;
  transform: scale(0.998);
}

/* Loader para tablas */
.table-loading {
  position: relative;
}

.table-loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20px;
  height: 20px;
  margin: -10px 0 0 -10px;
  border: 2px solid #e5e7eb;
  border-top-color: #3b82f6;

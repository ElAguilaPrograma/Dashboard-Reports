/* Contenedor de collage moderno */
.modern-collage-container {
  padding: 1.5rem;
  background: #ffffff;
}

.modern-grid {
  display: grid;
  gap: 0.75rem;
  width: 100%;
}

/* Diferentes layouts según cantidad de imágenes */
.grid-2 {
  grid-template-columns: 1fr 1fr;
}

.grid-3 {
  grid-template-columns: 2fr 1fr;
  grid-template-rows: 1fr 1fr;
}

.grid-3 .modern-collage-item:first-child {
  grid-row: 1 / 3;
}

.grid-4-plus {
  grid-template-columns: repeat(2, 1fr);
}

.modern-collage-item {
  position: relative;
  border-radius: 8px;
  overflow: hidden;
  background: #f8fafc;
  transition: all 0.3s ease;
}

.modern-collage-item.featured {
  grid-row: 1 / 3;
}

.collage-image-wrapper {
  position: relative;
  width: 100%;
  height: 200px;
  cursor: pointer;
  overflow: hidden;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.collage-image-wrapper:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px -5px rgba(0, 0, 0, 0.3);
}

.collage-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
  display: block;
}

.collage-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0.1) 0%,
    rgba(0, 0, 0, 0.3) 70%,
    rgba(0, 0, 0, 0.7) 100%
  );
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none; /* Importante: permite que el click pase a través del overlay */
}

.collage-image-wrapper:hover .collage-overlay {
  opacity: 1;
}

.collage-image-wrapper:hover .collage-image {
  transform: scale(1.1);
}

.image-title-overlay {
  position: absolute;
  bottom: 0.75rem;
  left: 0.75rem;
  right: 0.75rem;
  color: white;
  font-size: 0.75rem;
  font-weight: 500;
  text-align: center;
  background: rgba(0, 0, 0, 0.6);
  padding: 0.5rem;
  border-radius: 6px;
  backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transform: translateY(10px);
  transition: transform 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.25rem;
}

.collage-image-wrapper:hover .image-title-overlay {
  transform: translateY(0);
}

.expand-icon {
  font-size: 14px !important;
  width: 14px !important;
  height: 14px !important;
  color: rgba(255, 255, 255, 0.9);
}

/* Efecto de borde superior para collage */
.professional-collage::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #f59e0b, #ef4444, #ec4899);
  opacity: 0;
  transition: opacity 0.3s;
  z-index: 1;
}

.professional-collage:hover::before {
  opacity: 1;
}

/* Responsive para collages */
@media (max-width: 768px) {
  .modern-grid {
    grid-template-columns: 1fr !important;
  }
  
  .modern-collage-item.featured {
    grid-row: auto;
  }

  .collage-image-wrapper {
    height: 150px;
  }

  .collage-header {
    flex-direction: column;
    align-items: stretch;
    gap: 1rem;
  }

  .collage-actions {
    justify-content: center;
  }
}

.collage-item {
  position: relative;
  overflow: hidden;
  border-radius: 0.5rem;
  background-color: #f3f4f6;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 150px;
}

.collage-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  cursor: zoom-in;
  transition: transform 0.3s ease;
}

.collage-item:hover img {
  transform: scale(1.05);
}

/* Card Gráfica - Wrapper */
.card-chart-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 0.75rem;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  overflow: hidden;
  position: relative;
}

.card-chart-wrapper:hover {
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

/* Card Texto */
.card-text {
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  min-height: 200px;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-left: 4px solid #3b82f6;
}

.card-text:hover {
  transform: translateY(-4px);
  box-shadow: 0 10px 25px rgba(59, 130, 246, 0.2);
}

.card-text .card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1rem;
}

.card-text .card-header h3 {
  margin: 0;
  color: #1f2937;
  font-size: 1.1rem;
  font-weight: 600;
  flex: 1;
}

.card-text .card-header button {
  margin-left: 0.5rem;
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
  flex-shrink: 0;
}

.card-text .card-content {
  flex: 1;
  overflow-y: auto;
  color: #374151;
  font-size: 0.95rem;
  line-height: 1.5;
  word-wrap: break-word;
  max-height: calc(100% - 3rem);
}

.card-text .card-content p {
  margin: 0;
  white-space: pre-wrap;
}

.whitespace-pre-wrap {
  white-space: pre-wrap;
}

/* ===== MODAL IMAGEN EXPANDIDA PROFESIONAL ===== */

.modern-modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    45deg,
    rgba(0, 0, 0, 0.8) 0%,
    rgba(0, 0, 0, 0.9) 50%,
    rgba(0, 0, 0, 0.8) 100%
  );
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: modalFadeIn 0.3s ease-out;
  cursor: pointer;
  padding: 2rem;
}

.modern-image-modal {
  position: relative;
  background: #ffffff;
  border-radius: 16px;
  box-shadow: 
    0 25px 50px -12px rgba(0, 0, 0, 0.4),
    0 0 0 1px rgba(255, 255, 255, 0.1);
  max-width: 95vw;
  max-height: 95vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  animation: modalSlideUp 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  cursor: default;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-bottom: 2px solid #e2e8f0;
  gap: 1rem;
}

.modal-title {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-size: 1.125rem;
  font-weight: 700;
  color: #1e293b;
  flex: 1;
  min-width: 0;
}

.modal-title span {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.modal-icon {
  font-size: 1.5rem !important;
  width: 1.5rem !important;
  height: 1.5rem !important;
  color: #6366f1;
  flex-shrink: 0;
}

.modal-actions {
  display: flex;
  gap: 0.5rem;
  align-items: center;
}

.btn-modal-action {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border: none;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  background: #ffffff;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

.btn-modal-action::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: currentColor;
  opacity: 0;
  transition: opacity 0.2s;
  z-index: 0;
}

.btn-modal-action:hover::before {
  opacity: 0.1;
}

.btn-modal-action:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.2);
}

.btn-modal-action mat-icon {
  font-size: 20px;
  width: 20px;
  height: 20px;
  z-index: 1;
  position: relative;
}

.btn-download-modal {
  color: #059669;
  border: 1px solid #d1fae5;
}

.btn-download-modal:hover {
  background: #ecfdf5;
  border-color: #6ee7b7;
}

.btn-close-modal {
  color: #64748b;
  border: 1px solid #e2e8f0;
}

.btn-close-modal:hover {
  background: #f8fafc;
  border-color: #cbd5e1;
  color: #374151;
}

.modal-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  min-height: 0;
  background: #f8fafc;
}

.modern-expanded-image {
  max-width: 100%;
  max-height: 100%;
  width: auto;
  height: auto;
  object-fit: contain;
  border-radius: 8px;
  box-shadow: 0 8px 32px -4px rgba(0, 0, 0, 0.2);
  transition: transform 0.3s ease;
}

.modern-expanded-image:hover {
  transform: scale(1.02);
}

/* Animaciones para el modal */
@keyframes modalFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes modalSlideUp {
  from {
    opacity: 0;
    transform: translateY(60px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* Responsive para modal */
@media (max-width: 768px) {
  .modern-modal-backdrop {
    padding: 1rem;
  }
  
  .modal-header {
    padding: 1rem;
    flex-direction: column;
    align-items: stretch;
    gap: 1rem;
  }
  
  .modal-actions {
    justify-content: center;
  }
  
  .modal-content {
    padding: 1rem;
  }
  
  .btn-modal-action {
    width: 40px;
    height: 40px;
  }
  
  .btn-modal-action mat-icon {
    font-size: 18px;
    width: 18px;
    height: 18px;
  }
}

.imagen-grande {
  width: 100%;
  max-height: 80vh;
  object-fit: contain;
  border-radius: 0.5rem;
}

.btn-cerrar-modal {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: white;
  border: none;
  border-radius: 50%;
  width: 2.5rem;
  height: 2.5rem;
  font-size: 1.5rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
  z-index: 10000;
}

.btn-cerrar-modal:hover {
  background: #f3f4f6;
  transform: scale(1.1);
}

/* ===== RESPONSIVE ===== */

@media (max-width: 1400px) {
  .dashboard-masonry {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  /* En pantallas medianas, las tablas grandes ocupan solo 1.5 columnas o menos */
  .masonry-item-large {
    grid-column: span 1.5;
  }
}

@media (max-width: 1200px) {
  .dashboard-masonry {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .masonry-item-large {
    grid-column: span 1 !important;
  }
}

@media (max-width: 768px) {
  .dashboard-masonry {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .masonry-item-large {
    grid-column: span 1 !important;
  }

  .card {
    border-radius: 0.5rem;
  }

  .card-header {
    padding: 1rem;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .card-header button {
    width: 100%;
  }

  .collage-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .modal-imagen-grande {
    max-width: 95vw;
    padding: 1rem;
  }

  .image-display {
    max-height: 250px;
  }
}

